// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                String   @id @default(cuid())
  name              String   @unique
  slug              String   @unique
  kubernetesVersion String?  // e.g., "v1.32.0"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  versions          ProjectVersion[]
  gitSource         Json?        // Git source metadata (connectionId, repo, branch, folder, originalFiles)
  warningCount      Int          @default(0) @map("warning_count")
  errorCount        Int          @default(0) @map("error_count")
  hostedYamls       HostedYaml[]

  @@map("projects")
}

model ProjectVersion {
  id        String   @id @default(cuid())
  slug      String?  @unique // Friendly slug like "friendly-panda"
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  nodes     String   // JSON string
  edges     String   // JSON string
  createdAt DateTime @default(now())
  message   String?  // Optional commit message

  @@index([projectId])
  @@index([createdAt])
  @@map("project_versions")
}

model HostedYaml {
  id        String   @id @default(cuid())
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  orgId     String?  // Organization that owns this hosted yaml
  name      String?  // Optional friendly name
  yamlHash  String   // Hash of content for deduplication
  viewCount Int      @default(0)
  createdAt DateTime @default(now())
  lastAccessedAt DateTime?

  @@index([orgId])
  @@index([yamlHash])
  @@index([createdAt])
  @@map("hosted_yamls")
}

model KubernetesSchema {
  id              String   @id @default(cuid())
  version         String   // "v1.33.3"
  schemaKey       String   // e.g. "io.k8s.api.apps.v1.Deployment"
  schemaData      String   // JSON blob
  isFullyResolved Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([version, schemaKey, isFullyResolved])
  @@index([version])
  @@map("kubernetes_schemas")
}

model SchemaGvk {
  id         String   @id @default(cuid())
  version    String   // "v1.33.3"
  group      String
  gvkVersion String
  kind       String
  createdAt  DateTime @default(now())

  @@unique([version, group, gvkVersion, kind])
  @@index([version])
  @@map("schema_gvks")
}
